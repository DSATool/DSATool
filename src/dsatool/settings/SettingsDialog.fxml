<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pane" xmlns:fx="http://javafx.com/fxml/1" styleClass="background" >
   <left>
      <ListView fx:id="list" maxHeight="Infinity" prefWidth="150" />
   </left>
   <center>
      <VBox spacing="2" >
         <padding><Insets top="2" right="2" bottom="2" left="2"/></padding>
         <StackPane fx:id="tabArea" VBox.vgrow="ALWAYS" />
         <HBox spacing="2" alignment="BOTTOM_RIGHT" >
            <Button text="Ok" onAction="#close" />
         </HBox>
      </VBox>
   </center>
</BorderPane>